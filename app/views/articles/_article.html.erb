
<% obj.each do |article| %>
<div class="col-md-4">
<div class="article">
  <div class="article-title">
     <h3><%= article.title %></h3>
   </div>
  <div class= "article-description">
     <p><%= raw(article.description)%></p>
   </div>
   <div class="article_author">
     <span> Created by: <%= article.user.username if article.user %>  <%= time_ago_in_words(article.created_at) %> ago, last updated: <%= time_ago_in_words(article.updated_at) %> ago </span>
</div>
<div class="list-buttons">
     <button class="btn btn-default"><%= link_to 'Show', article_path(article) %></button>
     <button class="btn btn-primary"><%= link_to 'Edit', edit_article_path(article) %></button>
     <button class="btn btn-danger"><%= link_to 'Delete', article_path(article),
             method: :delete,
             data: { confirm: 'Are you sure?' } %></button>

</div>
</div>
</div>
  <% end %>
