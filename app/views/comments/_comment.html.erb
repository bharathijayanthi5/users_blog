<div class="comment">
  <p class="comment-content"><%= comment.content %></p>
  <p>By: <%= comment.user.username %> <%= time_ago_in_words(comment.created_at)%> ago </p>
  <div class="links">

    <% if comment.user_id == current_user.id %>
  <%= link_to 'Edit', edit_article_comment_path(comment.article, comment) %>
  <%= link_to 'Delete', article_comment_path(comment.article, comment), method: :delete, data: {confirm: "Are you sure?"} %>
<% end %>

</div>
</div>
